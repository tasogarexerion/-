LINE_LIMIT = int(os.environ.get("TASO_LINE_LIMIT", "200000"))

GO_HARD_SEC = float(os.environ.get("TASO_GO_HARD_SEC", "60.0"))
GO_STOP_GRACE_SEC = float(os.environ.get("TASO_GO_STOP_GRACE_SEC", "3.0"))

